              <DropdownMenuContent className="bg-popover text-popover-foreground min-w-[220px]">
                <DropdownMenuItem onClick={() => setSelectedItem('Пункт 1: базовое действие')}>
                  Пункт 1: базовое действие
                </DropdownMenuItem>
                <DropdownMenuItem onClick={() => setSelectedItem('Пункт 2: вторичное действие')}>
                  Пункт 2: вторичное действие
                </DropdownMenuItem>
                <DropdownMenuItem onClick={() => setSelectedItem('Пункт 3: ещё один вариант')}>
                  Пункт 3: ещё один вариант
                </DropdownMenuItem>
                <DropdownMenuItem disabled>
                  Пункт 4: недоступен
                </DropdownMenuItem>
              </DropdownMenuContent>
            </DropdownMenu>
          </div>

          <div className="space-y-2">
            <div className="flex items-center gap-2 text-sm text-muted-foreground">
              <CalendarIcon className="w-4 h-4" />
              <span>Календарь (react-day-picker)</span>
            </div>
            <div className="border border-border rounded-lg p-3 inline-block bg-background">
              <Calendar
                mode="single"
                selected={date}
                onSelect={setDate}
              />
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  );
}
